<UserControl
	x:Class="Microsoft.Virtualization.Client.InteractiveSession.NoConnectionDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:Microsoft.Virtualization.Client.InteractiveSession">
	<Grid
		Background="#FF272727">
		<StackPanel
			Width="Auto"
			VerticalAlignment="Center">
			<TextBlock
				Name="txtOne"
				HorizontalAlignment="Center"
				Foreground="#FFFFFFFF"
				TextWrapping="Wrap"
				FontSize="14">Sample Content.</TextBlock>
			<TextBlock
				Name="txtTwo"
				HorizontalAlignment="Center"
				Foreground="#FFFFFFFF"
				TextWrapping="Wrap"
				Margin="0,20,0,30">Sample Content 2.</TextBlock>
			<Button
				Name="btnTurnOn"
				HorizontalAlignment="Center"
				Foreground="#FFFFFFFF"
				Padding="15,5"
				Background="#FF4C4B4B"
				BorderBrush="#FF3B3B3B"
				Click="btnTurnOn_Click">Sample Content</Button>
			<Button
				Name="btnResume"
				HorizontalAlignment="Center"
				Foreground="#FFFFFFFF"
				Padding="15,5"
				Background="#FF4C4B4B"
				BorderBrush="#FF3B3B3B"
				Click="btnResume_Click">Sample Content2</Button>
		</StackPanel>
	</Grid>
</UserControl>
